<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataQS.App.StationRegistry"
             Title="Cadastro de Estação">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Name" />
            <Entry x:Name="NameEntry" Keyboard="Numeric" Placeholder="Ex: Nome da Estação" />
            
            <Label Text="Latitude" />
            <Entry x:Name="LatitudeEntry" Keyboard="Numeric" Placeholder="Ex: -23.5505" />

            <Label Text="Longitude" />
            <Entry x:Name="LongitudeEntry" Keyboard="Numeric" Placeholder="Ex: -46.6333" />

            <Label Text="Altitude (m)" />
            <Entry x:Name="HeightEntry" Keyboard="Numeric" Placeholder="Ex: 760" />

            <Label Text="Temperatura Máxima (°C)" />
            <Entry x:Name="MaxTemperatureEntry" Keyboard="Numeric" Placeholder="Ex: 35.5" />

            <Label Text="Temperatura Mínima (°C)" />
            <Entry x:Name="MinTemperatureEntry" Keyboard="Numeric" Placeholder="Ex: 5.0" />

            <Label Text="Precipitação Máxima (mm)" />
            <Entry x:Name="MaxRainfallEntry" Keyboard="Numeric" Placeholder="Ex: 200.5" />

            <Button Text="Salvar Estação" Clicked="OnSaveStationClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
